extends layout

block content
  h1= title
  h2 Bienvendio a calculadora Soap 
  h3 #{cuerpo}
  div
    p Numero 1
      input(type="number" name="num1" id ="num1")
    p Numero 2
      input(type="number" name="num2" id="num2")
    
    p Suma
      input(type="radio" name="oper" value="suma" checked ) 
    p Resta
      input(type="radio" name="oper" value="resta")
    p Division
      input(type="radio" name="oper" value="div")
    p Multiplicacion
      input(type="radio" name="oper" value="mult")
    button( onclick="resultado()" ) Resultado
 
  h3(id="solucion") 
  div(id="respuestas")

  script(src="/javascripts/displayDataCalc.js")