extends layout

block content
  h1= title
  p Bienvendio a calculadora Soap 
  p #{cuerpo}
  form( method="POST" action ="/")
    p Numero 1
      input(type="number" name="num1")
    p Numero 2
      input(type="number" name="num2")
    
    p Suma
      input(type="radio" name="oper" value="suma" checked ) 
    p Resta
      input(type="radio" name="oper" value="resta")
    p Division
      input(type="radio" name="oper" value="div")
    p Multiplicacion
      input(type="radio" name="oper" value="mult")
    button(class=buttonClass type="submit") Resultado
 
  p El resultado de la operacion es: #{resultado}
